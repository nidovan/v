 string accessToken = "YOUR_ACCESS_TOKEN";
        int communityId = 12345; // Replace with the actual community ID
        int userId = 67890; // Replace with the actual user ID

        using (HttpClient client = new HttpClient())
        {
            client.DefaultRequestHeaders.Add("Authorization", $"Bearer {accessToken}");

            string apiUrl = $"https://www.yammer.com/api/v1/community_memberships.json?community_id={communityId}&user_id={userId}&is_admin=true";

            HttpResponseMessage response = await client.PostAsync(apiUrl, new StringContent(""));
            response.EnsureSuccessStatusCode();

            Console.WriteLine("User added as admin successfully.");
        }



public void AddUserToCommunity(string accessToken, int communityId, int userId)
{
    var client = new RestClient("https://www.yammer.com/api/v1");

    var request = new RestRequest($"/community_memberships.json?community_id={communityId}&user_id={userId}", Method.POST);
    request.AddHeader("Authorization", $"Bearer {accessToken}");

    var response = client.Execute(request);

    if (response.IsSuccessful)
    {
        // User added successfully
        Console.WriteLine("User added to the community.");
    }
    else
    {
        // Error occurred
        Console.WriteLine("Error adding user to the community.");
    }
}


